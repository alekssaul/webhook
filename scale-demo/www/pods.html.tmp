<html lang="en" ng-app="KubernetesScaleDemo">
  <head>
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/0.9.4/angular-material.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=RobotoDraft:300,400,500,700,400italic">
    <meta name="viewport" content="initial-scale=1" />
  </head>
  <body>
    <div layout="column" style="margin-top: 20px; width: 80%" offset="10" ng-controller="AppCtrl">
      <md-toolbar layout="row" layout-align="space-around center">
	<h1 class="md-display-2">Kubernetes Rolling Updates</h1>
	<a href="https://www.coreos.com"> <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/8c/CoreOS.svg/2000px-CoreOS.svg.png" style="width:230; height: 84" />
	</a>
      </md-toolbar>
      
      <div layout="row" class="md-whiteframe-z2" style="padding: 10px">
	<div layout-margin="10px" flex="20" style="text-align: right">
	  <div class="md-subhead">production-10</div>
	  <div style="text-align: right">
	    <div class="md-display-1">{{ controller.getServers("production-10") | number:0 }}</div>
	  </div>
	  <div class="md-subhead">production-11</div>
	  <div style="text-align: right">
	    <div class="md-display-1">{{ controller.getServers("production-11") | number:0 }}</div>
	  </div>
	</div>
	<div layout-margin="10px" style="margin-left: 25px" flex>
	  <div>
	  <div ng-repeat="pod in controller.getServersForVersion('production-10').concat(controller.getServersForVersion('production-11'))" style="display: inline-block; width: 50px; height: 50px;">
	    <div style="height: 50px; background: {{controller.getVersionColor(pod)}}">
	    </div>
	  </div>
	  </div>
	  <!--
	      <md-chips ng-model="controller.servers.items" readonly="true">
		<md-chip-template>
		  {{$chip.metadata.name}}
		</md-chip-template>
	      </md-chips>
	      -->
	</div>
      </div>

      <!-- Angular Material Dependencies -->
      <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
      <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-animate.min.js"></script>
      <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-aria.min.js"></script>

      <script src="https://ajax.googleapis.com/ajax/libs/angular_material/0.9.4/angular-material.min.js"></script>
      <script src="pods.js"></script>
    </div>
  </body>
</html>
